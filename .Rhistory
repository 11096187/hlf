flota[3] = flota[3] / 3
flota[4] = flota[4] / 2
flota[5] = flota[5] / 1
if(flota[1] != 1 || flota[2] != 2 || flota[3] != 2 || flota[4] != 3 || flota[5] != 4)
{
flota[1] = 999
}
return(flota)
}
